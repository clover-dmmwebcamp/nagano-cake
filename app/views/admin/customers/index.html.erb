<div class="container">
  <div class="row">
    <div class="col">

      <h4 class="my-3 ml-4">会員一覧</h4>
        <table class='table'>
          <thead>
            <tr class="bg-light">
              <th style="width: 10%">会員ID</th>
              <th style="width: 35%">氏名</th>
              <th style="width: 35%">メールアドレス</th>
              <th style="width: 20%">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.full_name, admin_customer_path(customer.id), class:"link-order-customer" %></td>
                <td><%= customer.email %></td>
                <td>
                    <% if customer.is_deleted == false %>
                        <p>有効</p>
                    <% else %>
                        <p class="text-danger">退会</p>
                    <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-3 custom-pagination">
          <%= paginate @customers %>
        </div>
    </div>
  </div>
</div>