<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h5 class="mt-4 ml-5">ジャンル一覧・追加</h5>
            <div class="my-5 ml-2">
                <%= form_with model: @category, url: admin_categories_path do |f| %>
                    <div class="mr-4 d-inline">
                        <%= f.label :name, "ジャンル名", class:"font-weight-bold" %>
                    </div>
                    <div class="mr-4 d-inline">
                        <%= f.text_field :name, placeholder:"ジャンル名" %>
                    </div>
                    <%= f.submit "新規登録", class:"btn btn-success" %>
                <% end %>
            </div>
        </div>
    </div>
</div>