<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <h5 class="mt-4 ml-5">ジャンル編集</h5>
            <div class="my-5 ml-2">
                <% if @category.errors.any? %>
                    <ul class="alert alert-danger" role="alert">
                        <h6 class="alert-heading">
                            <%= @category.errors.count %>件のエラーが発生しました
                        </h6>
                        <% @category.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
                <%= form_with model: @category, url: admin_category_path do |f| %>
                    <div class="mr-5 d-inline-block">
                        <%= f.label :name, "ジャンル名", class:"font-weight-bold" %>
                    </div>
                    <div class="mr-5 d-inline-block">
                        <%= f.text_field :name, class:"category_name" %>
                    </div>
                    <%= f.submit "変更を保存", class:"btn btn-success" %>
                <% end %>
            </div>
        </div>
    </div>
</div>