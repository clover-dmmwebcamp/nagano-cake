<div class="container">
    <div class="row">
        <div class="col my-4">
            <h4 class="mb-5"><%= @customer.full_name %>さんの注文履歴一覧</h4>
              <% if @orders.present? %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>購入日時</th>
                            <th>注文個数</th>
                            <th>注文ステータス</th>
                        </tr>
                    </thead>
                    <% @orders.each do |order| %>
                    <tbody>
                        <tr>
                            <td><%= link_to admin_order_path(order.id), class:"link-order-time" do %>
                                    <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                                <% end %>
                            </td>
                            <td><%= order.order_details.sum(:quantity) %></td>
                            <td><%= order.status_i18n %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
              <% else %>
                <h4 class="text-center">注文履歴はありません。</h4>
              <% end %>

            <div class="d-flex justify-content-center mt-3 custom-pagination">
                <%= paginate @orders %>
            </div>
        </div>
    </div>
</div>