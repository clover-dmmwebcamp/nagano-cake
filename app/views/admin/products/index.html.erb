<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <h4 class="my-3 ml-4 d-inline-block">商品一覧</h4>
            <div class="d-inline-block ml-5">
                <%= link_to "＋", new_admin_product_path, class:"btn btn-outline-dark rounded-circle p-0 d-flex align-items-center justify-content-center", style:"width:2rem;height:2rem;" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class='table'>
                <thead>
                    <tr>
                        <th style="width: 10%">商品ID</th>
                        <th style="width: 45%">商品名</th>
                        <th style="width: 15%">税抜価格</th>
                        <th style="width: 15%">ジャンル</th>
                        <th style="width: 15%">ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= link_to product.name, admin_product_path(product), class:"text-dark" %></td>
                        <td><%= product.without_tax.to_s(:delimited) %></td>
                        <td><%= product.category.name %></td>
                        <td>
                            <% if product.is_active == true %>
                                <p class="text-success">販売中</p>
                            <% else %>
                                <p class="text-danger">販売停止中</p>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="d-flex justify-content-center mt-3">
                <%= paginate @products %>
            </div>
        </div>
    </div>
</div>