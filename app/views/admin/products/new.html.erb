<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h5 class="mt-4 ml-5">商品新規登録</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7 mx-auto">
            <div class="my-4">
                <% if @product.errors.any? %>
                    <ul class="alert alert-danger" role="alert">
                        <h6 class="alert-heading">
                            <%= @product.errors.count %>件のエラーが発生しました
                        </h6>
                        <% @product.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
                <%= form_with model: @product, url: admin_products_path do |f| %>
                    <div class="form-group">
                        <%= f.label :商品画像, style: "margin-right:60px;" %>
                        <%= f.file_field :product_image, accept: "image/*" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :商品名, style: "margin-right:75px;" %>
                        <%= f.text_field :name, placeholder:"商品名", size: "30x1" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :商品説明, style: "margin-right:60px;", class: "align-top" %>
                        <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", size: "30x5" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :ジャンル, style: "margin-right:62px;" %>
                        <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), include_blank: "--選択してください--", size: "30x1" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :税抜価格, style: "margin-right:60px;" %>
                        <%= f.text_field :without_tax, placeholder:"1000", size: "30x1" %>円
                    </div>
                    <div class="form-group">
                        <%= f.label :販売ステータス %>
                        <%= f.radio_button :is_active, true %>
                        <%= f.label :販売中 %>
                        <%= f.radio_button :is_active, false %>
                        <%= f.label :販売停止中 %>
                    </div>
                    <div class="form-group">
                        <%= f.submit "新規登録", class:"btn btn-success" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>