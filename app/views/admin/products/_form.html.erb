<div class="form-group">
  <%= f.label :product_image, "商品画像", style: "margin-right:60px;" %>
  <%= f.file_field :product_image, accept: "image/*" %>
</div>
<div class="form-group">
  <%= f.label :name, "商品名", style: "margin-right:75px;" %>
  <%= f.text_field :name, placeholder:"商品名", size: "30x1" %>
</div>
<div class="form-group">
  <%= f.label :introduction, "商品説明", style: "margin-right:60px;", class: "align-top" %>
  <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", size: "30x5" %>
</div>
<div class="form-group">
  <%= f.label :category_id, "ジャンル", style: "margin-right:62px;" %>
  <%= f.collection_select :category_id, categories, :id, :name, include_blank: "--選択してください--" %>
</div>
<div class="form-group">
  <%= f.label :without_tax, "税抜価格", style: "margin-right:60px;" %>
  <%= f.text_field :without_tax, placeholder:"1000", size: "30x1" %>円
</div>
<div class="form-group">
  <%= f.label :is_active, "販売ステータス", style: "margin-right:10px;" %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_true, "販売中", style: "margin-right:20px;" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active_false, "販売停止中(売切れ)" %>
</div>