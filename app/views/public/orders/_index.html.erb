<table class="table table-bordered border-dark">
  <thead>
    <tr class="bg-light">
      <th style="width: 10%">注文日</th>
      <th style="width: 30%">配送先</th>
      <th style="width: 30%">注文商品</th>
      <th style="width: 10%">支払金額</th>
      <th style="width: 10%">ステータス</th>
      <th style="width: 10%">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= order.postcode %></br>
        <%= order.address %></br>
        <%= order.name %> 様
      </td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.product.name %></br>
        <% end %>
      </td>
      <td><%= order.total_pay.to_s(:delimited) %>円</td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to"表示する", order_path(order), class: "btn btn-outline-secondary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>