<div class="container center-block">
  <div class="row">
    <h4 class="mt-5 ml-5 bg-light">注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-8">
      <b>注文情報</b>
      <table class="table table-bordered">
        <thead>
          <tr><th class="bg-light">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
          <tr><th class="bg-light">配送先</th><td>〒<%= @order.postcode %></br><%= @order.address %></br><%= @order.name %></td></tr>
          <tr><th class="bg-light">支払い方法</th><td><%= @order.pay_type_i18n %></td></tr>
          <tr><th class="bg-light">ステータス</th><td><%= @order.status_i18n %></td></tr>
        </thead>
      </table>
    </div>

    <div class="col-4">
      <b>請求情報</b>
      <table class="table table-bordered">
        <thead>
          <!--商品合計金額を代入-->
          <tr><th class="bg-light">商品合計</th><td><%= @order.name %></td></tr>
          <tr><th class="bg-light">配送料</th><td><%= @order.delivery_cost %></td></tr>
          <tr><th class="bg-light">ご請求額</th><td><%= @order.total_pay %></td></tr>
        </thead>
      </table>
    </div>

    <div class="row-12">
      <div class="col">
        <b>注文内容</b>
        <table class="table table-bordered">
          <thead>
            <tr class="bg-light">
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <!--カート内商品を表示するeach文を記述-->
            <tr>
              <td>いちごのショートケーキ</td>
              <td>500</td>
              <td>2</td>
              <td>1000</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>