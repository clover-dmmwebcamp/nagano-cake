<div class="container center-block">
  <div class="row">
    <h4 class="mt-5 ml-5 bg-light">注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-12">
      <!--h想品履歴一覧-->
      <table class="table table-bordered">
        <thead>
          <tr class="bg-light">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postcode %></br>
                <%= order.address %></br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.product.name %></br>
                <% end %>
              </td>
              <td><%= order.total_pay %></td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to"表示する", order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>