<div class="container">
  <h4 class="my-3 ml-4">注文履歴一覧</h4>
  <div class="row justify-content-center">
    <div class="col">
      <!--注文履歴一覧-->
      <% if @orders.present? %>
        <%= render 'index', orders: @orders %>
      <% else %>
        <div class="text-center">
          <h2 class="mb-5">ご注文履歴はありません。</h2>
          <%= link_to "商品一覧へ", products_path , class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-3 custom-pagination">
    <%= paginate @orders %>
  </div>
</div>