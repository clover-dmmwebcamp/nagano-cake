
    <!--タイトル-->
    <h2>配送先/登録一覧</h2>
    
    <!--エラー文-->
    <% if @address.errors.any? %>
      <%= @address.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    <!--配送先登録フォーム-->
    <%= form_with model: @address do |f| %>
      <div class = "form-group">
        <label for = "postcode">郵便番号（ハイフンなし）</label>
        <%= f.text_field :postcode, class:"form-control postcode" %>
      </div>
      <div class = "form-group">
        <label for = "address">住所</label>
        <%= f.text_field :address, class:"form-control address" %>
      </div>
      <div class = "form-group">
        <label for = "name">宛名</label>
        <%= f.text_field :name, class:"form-control name" %>
      </div>
    <% end %>
    
    <!--配送先一覧/編集・削除テーブル-->
    <table class = "table table-hover table-inverse">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= address.postcode %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_address_path, class:"btn btn-sm btn-success" %>
            <%= link_to "削除する", address_path, method: :delete, class:"btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>