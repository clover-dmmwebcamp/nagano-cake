<div class = "col-md-8 offset-md-1">
    <!--タイトル-->
    <h4 class="my-3 ml-4">配送先/登録一覧</h4>

    <!--エラー文-->
    <% if @address.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <h6 class="alert-heading">
          <%= @address.errors.count %>件のエラーが発生しました
        </h6>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <!--配送先登録フォーム-->
    <%= render "form", address: @address %>

    <!--配送先一覧/編集・削除テーブル-->
    <table class = "table table-bordered">
      <thead>
        <tr class="bg-light">
          <th style="width: 15%">郵便番号</th>
          <th style="width: 50%">住所</th>
          <th style="width: 20%">宛名</th>
          <th style="width: 15%"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postcode %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %> 様
            </td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-outline-secondary" %>
              <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-outline-danger mt-1" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>