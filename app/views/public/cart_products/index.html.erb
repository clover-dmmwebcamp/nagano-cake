<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-12 mt-5">
      <h4>ショッピングカート</h4>
      <% if @cart_products.present? %>
        <div class = "text-right">
          <%= link_to "カートを空にする", destroy_all_cart_products_path, method: :delete, class: "btn btn-danger" %>
        </div>
        <table class = "table table-bordered table-hover table-inverse mt-3">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
            <% @cart_products.each do |cart_product| %>
              <tr>
                <td>
                  <%= cart_product.product.name %>
                </td>
                <td>
                  <%= cart_product.product.add_tax_price.to_s(:delimited) %>
                </td>
                <td>
                  <%= form_with model: cart_product do |f| %>
                    <%= f.select :quantity, *[1..10], selected: cart_product.quantity, include_blank: "個数選択" %>
                    <%= f.submit "変更", class: "btn btn-light" %>
                  <% end %>
                </td>
                <td>
                  <%= cart_product.subtotal.to_s(:delimited)  %>
                </td>
                <td>
                  <%= link_to "削除する", cart_product_path(cart_product.id), method: :delete %> 
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-light mt-3" %>
        <table class = "table table-bordered col-3 mt-3 float-right" >
          <tr>
            <th>
              合計金額
            </th>
            <td>
              <%= @total.to_s(:delimited)  %>
            </td>
          </tr>
        </table>
        <p class = "row justify-content-center mt-5 mb-5" >
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success"%>
        </p>
      <% else %>
        <div class = "text-center">カートに商品を追加してください</div>
        <p class = "row justify-content-center mt-5 mb-5" >
          <%= link_to "買い物を続ける", root_path, class: "btn btn-light mt-3" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
      
