<div class="container">
    <div class="row">
        <div class="col my-2">

            <h2 class="mt-1">マイページ</h2>
                <div class="d-flex align-items-center">
                  <h4><b>登録情報</b></h4>
                  <%= link_to "編集する", customers_infomation_edit_path, class:"btn btn-outline-secondary ml-4 mb-2" %>
                </div>

                    <table class="table table-bordered w-75">
                        <tr>
                            <td style="width: 20%">氏名</td>
                            <td><%= @customer.full_name %></td>
                        </tr>
                        <tr>
                            <td>カナ</td>
                            <td><%= @customer.full_name_kana %></td>
                        </tr>
                        <tr>
                            <td>郵便番号</td>
                            <td><%= @customer.postcode %></td>
                        </tr>
                        <tr>
                            <td>住所</td>
                            <td><%= @customer.address %></td>
                        </tr>
                        <tr>
                            <td>電話番号</td>
                            <td><%= @customer.phone_number %></td>
                        </tr>
                        <tr>
                            <td>メールアドレス</td>
                            <td><%= @customer.email %></td>
                        </tr>
                    </table>

                        <div class="d-flex align-items-center">
                        <h4><b>配送先</b></h4>
                        <%= link_to "一覧を見る", addresses_path, class:"btn btn-outline-secondary ml-3" %>
                        <h3 class="mx-3">/</h3>
                        <h4><b>注文履歴</b></h4>
                        <%= link_to "一覧を見る", orders_path, class:"btn btn-outline-secondary ml-3" %>
                        </div>

        </div>
    </div>
</div>
